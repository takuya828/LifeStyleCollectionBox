<%= flash[:danger] %>
<%= flash[:success] %>

<div class="container">
  <div class="mt-3 mx-3">
    <h2>マイページ</h2>
      <div class="row">
        <div class="col">
          <div class="mt-3">
            <h3>-登録情報-　　<%= link_to "編集する", edit_user_path(@user.id), class:"btn btn-success" %></h3>
            <table border="1" cellpadding="5">
              <tr>
                <td>プロフィール画像</td>
                <td><%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
              </tr>
              <tr>
                <td>ハンドルネーム</td>
                <td><%= @user.handle_name %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <td>作成日時</td>
                <td><%= @user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              </tr>
            </table>
<br>
<h3>-投稿一覧-</h3>
<div class="container">
    <div class="row">
<% @posts.each do |post| %>
<div class="col-md-3">
   <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image_logo.png" %>
  <p>タイトル: <%= link_to post.title, post_path(post) %></p>
  <p>作成日時: <%= post.created_at.strftime('%Y/%m/%d') %></p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  <p>いいね数: <%= post.favorites.count %></p><br>
  </div>
<% end %>
</div>
</div>
<h3><%= link_to "-いいねした投稿一覧-", favorites_user_path(@user) %></h3>
            </div>
          </div>
        </div>
      </div>
  </div>