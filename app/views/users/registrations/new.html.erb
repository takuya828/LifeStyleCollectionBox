<main>
  <div class="container">
      <div class="mt-3">

<h1>新規登録</h1>
</div>
   <div class="row">
    <div class="mt-5 mx-3">
     <div class="col">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

 <div class="field">
    <%= f.label :ハンドルネーム %>　　　　　<%= f.text_field :handle_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（6文字以上） %>  <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %>　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>

<div class="mt-5">
<p><strong>既に登録済みの方</strong><br>
</div>
<p>　　<%= link_to"こちら", new_user_session_path %>からログインしてください</p>

</div>
</div>
</div>
</div>
</main>