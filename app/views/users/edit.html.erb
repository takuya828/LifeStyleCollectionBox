<div class="container">
  <div class="mt-3 mx-3">
    <h3>マイページ編集</h3>
    <h3 class="text-danger"><strong><%= flash[:danger] %></strong></h3>
      <div class="row">
        <div class="col">
          <div class="mt-3">

<%= form_with model:@user, url: user_path, local: true do |f| %>
<p>プロフィール画像<%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>　　　　<%= f.attachment_field :image %></p>
<p>ハンドルネーム　　　　　　　　　　<%= f.text_field :handle_name %></p>
<p>メールアドレス　　　　　　　　　　<%= f.text_field :email %></p>
<%= f.submit '保存する', class:"btn btn-success" %>　　　　<%= link_to '退会する', users_check_path, class:"btn btn-danger" %>

<% end %>
</div>
</div>
</div>
</div>
</div>