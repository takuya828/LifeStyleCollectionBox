<main>
    <div class="container">
        <div class="row">
            <div class="mx-auto">
            <div class="mt-5">
              <h3>-問い合わせ内容の確認-</h3>
              <br>
<table border="1" cellpadding="10">
  <tbody>
    <tr>
      <td>お名前</td>
      <td><%= @contact.name %></td>
    </tr>
    <tr>
      <td>返信先メールアドレス</td>
      <td><%= @contact.email %></td>
    </tr>
    <tr>
      <td>問い合わせ内容</td>
      <td><%=safe_join(@contact.message.split("\n"),tag(:br))%></td>
    </tr>
  </tbody>
</table>
<br><br>
<%= form_for(@contact) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :message %>
  <%= f.submit '送信', class: "btn btn-primary btn-lg" %>
<% end %>
<br>
<%= form_for @contact, url: back_path do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :message %>
  <%= f.submit '入力画面に戻る', class: "btn btn-light btn-lg" %>
<% end %>

 </div>
 </div>
 </div>
 </div>
 </main>