<main>
  <div class="container">
    <div class="mt-3">
        <%= flash[:danger] %>
　　　　<%= flash[:success] %>
     <h3><%= @user.handle_name %>さんの会員詳細　　　<%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success" %></h3>
    </div>
    <div class="row">
      <div class="mt-5 mx-3">
        <div class="col">
          <%= attachment_image_tag @user, :image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg" %>
        </div>
      </div>
    <div class="mt-5">
      <div class="col">
            <p>会員ID 　　　　　　　　<%= @user.id %></p>
            <p>ハンドルネーム 　　　　<%= @user.handle_name %></p>
            <p>メールアドレス 　　　　<%= @user.email %></p>
            <p>会員ステータス 　　　　<%= @user.is_delete_i18n %></p>
      </div>
    </div>
    </div>
     <h3>投稿一覧</h3>
     <div class="container">
    <div class="row">
    <% @posts.each do |post| %>
    <div class="col-md-3">
   <%=  link_to (attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image_logo.png"), admin_post_path(post) %>
  <p>タイトル: <%= link_to post.title, admin_post_path(post) %></p>
  <p>作成日時: <%= post.created_at.strftime('%Y/%m/%d') %></p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  <p>いいね数</p><br><br>
</div>
<% end %>
  </div>
  <%= paginate @posts %>
</main>