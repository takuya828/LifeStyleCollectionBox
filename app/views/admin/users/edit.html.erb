<div class="container">
  <div class="mt-3 mx-3">
    <h3><%= @user.handle_name %>さんの会員情報編集</h3>
   <h3 class="text-danger"><strong><%= flash[:danger] %></strong></h3>
    <div class="row">
      <div class="col">
        <div class="mt-3">
          <%= form_with model:@user, url: admin_user_path, local: true do |f| %>
            <p>会員ID 　　　　　<%= @user.id %></p>
            <p>ハンドルネーム 　<%= f.text_field :handle_name %></p>
            <p>メールアドレス　 <%= f.text_field :email %></p>
            <p>会員ステータス 　<%= f.radio_button :is_delete, :yuukou, checked: true %>
            <%= f.label :is_delete, User.is_deletes_i18n[:yuukou] %>
            <%= f.radio_button :is_delete, :mukou %>
            <%= f.label :is_delete, User.is_deletes_i18n[:mukou] %></p>

　　　　　　　　<%= f.submit '変更を保存', class: "btn btn-success" %>
　　　　　　　　<% end %>
        </div>
      </div>
    </div>
  </div>
</div>