<main>
  <div class="container">
    <div class="mt-3">
      <h4>管理者用投稿詳細　　　　　<%= link_to link_to("編集", edit_admin_post_path(@post.id), class: "btn btn-success") %></h4>
    </div>
    <div class="row">
      <div class="mt-5 mx-3">
        <div class="col">
           <%= attachment_image_tag @post, :image, :fill, 300, 300 %>
        </div>
      </div>
    <div class="mt-5">
      <div class="col">
        <p>タイトル　　　　　　　<strong><%= @post.title %></strong></p>
        <p>本文　　　　　　　　　<strong><%= @post.body %></strong></p>
        <p>投稿者画像　　　　　　<%= attachment_image_tag @post.user, :image, :fill, 100, 100, fallback: "no_image.jpg" %></p>
        <p>投稿者名　　　　　　　<strong><%= @post.user.handle_name %></strong></p>
        <p>投稿日時　　　　　　　<%= @post.created_at.strftime('%Y/%m/%d %H:%M') %></p>
        <p>コメント件数：<strong><%= @post.post_comments.count %></strong></p>
        <p>いいね数:<strong><%= @post.favorites.count %></strong></p>
        <% @post.post_comments.each do |post_comment| %>
       <p><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M') %>
     <%= attachment_image_tag post_comment.user, :image, :fill, 50, 50 %>
     <%= post_comment.user.handle_name %></p>
  <%= post_comment.comment %>
  <% if post_comment.user == current_user %>
  <div>
    <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
  </div>
  <% end %>
  <% end %>
      </div>
    </div>
    </div>
  </div>
</main>