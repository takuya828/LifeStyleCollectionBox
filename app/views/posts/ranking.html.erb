<% @posts.each.with_index(1) do |post, i| %>

<div>
  第<%= i %>位
   <%= attachment_image_tag post, :image, :fill, 100, 100 %>
  <p>カテゴリー: <%= post.category.name %></p>
  <p>タイトル: <%= link_to post.title, post_path(post) %></p>
  <p>ユーザーネーム：<%= post.user.handle_name %></p>
  <p>作成日時: <%= post.created_at.strftime('%Y/%m/%d') %></p>
  <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  <p>いいね数: <%= post.favorites.count %></p><br><br>
</div>

<% end %>