<h3>投稿詳細ページ</h3>
 <%= attachment_image_tag @post, :image, :fill, 300, 300 %>
  <p>タイトル：<%= @post.title %></p>
  <p>本文：<%= @post.body %></p>
  <p><%= attachment_image_tag @post.user, :image, :fill, 100, 100 %>　　ハンドルネーム：<%= @post.user.handle_name %></p>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to post_favorite_path(@post), method: :delete do %>
        ♥<%= @post.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_favorites_path(@post), method: :post do %>
        ♡<%= @post.favorites.count %> いいね
      <% end %>
    </p>
    <% end %>
  <p>いいね する</p>

<div>
<p>コメント件数：<strong><%= @post.post_comments.count %></strong></p>
<% @post.post_comments.each do |post_comment| %>
  <p><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M') %>
     <%= attachment_image_tag post_comment.user, :image, :fill, 50, 50 %>
     <%= post_comment.user.handle_name %></p>
  <%= post_comment.comment %>
  <% if post_comment.user == current_user %>
  <div>
    <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
  </div>
  <% end %>
 <% end %>
 </div>
<%= form_with(model:[@post, @post_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメント入力" %>
  <%= f.submit "送信する" %>
<% end %>